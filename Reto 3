def calcularVenta(total):
  if 300000 >= total > 150000:
    return math.floor(total*0.10)
  elif 700000 >= total > 300000:
    return math.floor(total*0.15)
  elif total > 700000:
    return math.floor(total*0.20)
  else:
  return total

