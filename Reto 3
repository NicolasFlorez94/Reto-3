listaProductos = []
cantidadProductos = []
precioProductos = []
accionUsuario = 0

def primeraFuncion():
    productoNuevo = input()
    cantidadNueva = int(input())
    precioNuevo = int(input())
    listaProductos.append(productoNuevo)
    cantidadProductos.append(cantidadProductos)
    precioProductos.append(precioProductos)

def calculaDescuento(valorTotal):
  if (valorTotal >= 150000) and (valorTotal <= 300000):
    descuento = valorTotal * 0.1
  elif (valorTotal > 300000) and (valorTotal <= 700000):
    descuento =  valorTotal * 0.15
  elif valorTotal > 700000:
    descuento =  valorTotal * 0.2
  else:
    descuento = 0
  return descuento

